<div class="new-trip">
  <h1> New Trip</h1>

  <div class="trip-form">
    <%=form_with url: trips_path, method: :post do |f|%>
      <%=f.hidden_field :user_id, value: current_user.id%>
      <span class="form_tag"><%=f.text_field :name, placeholder: "Enter a name for your trip", size: 30%></span>
      <span class="form_tag"><%=f.text_field :location, placeholder: "Five digit zipcode"%></span>
      <span class="form_tag"><%=f.date_field :date, min: Time.now, max: 10.days.from_now %></span>
      <span class="form_tag"><%= f.submit "Lets Go!"%></span>
    <%end%>
  </div>
</div>
